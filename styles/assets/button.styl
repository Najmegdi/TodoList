button
  display flex
  justify-content center
  align-items center
  border 1px solid transparent
  border-radius 5px
  background var(--primaryColor)
  color: var(--textButtonColor)
  padding 1rem 2rem
  margin-top 20px
  box-shadow var(--box-shadow)
  gap 5px

  &.icon-only
    width 34px
    height: 34px
    padding: 0
    border-radius 40px

  &:hover
    background var(--darkBlueColor)

  .icon
    width 12px
    height: 12px