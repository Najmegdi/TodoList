main
  display flex
  height 100vh

  aside
    display flex
    flex-direction column
    background var(--lightColor)
    padding 1rem 0
    width 250px
    gap 50px
    transition background .3s ease-in-out

    header
      display flex
      flex-direction column
      gap 2rem

      a
        display flex
        align-items center
        justify-content center
        gap 5px

        img
          width 30px
          height 30px

    header div
      display flex
      flex-direction column
      align-items center
      justify-content center


      img
        height 50px
        width 50px

    .logo
      font-size 2.8rem
      font-weight: 700;

    nav
      display flex
      flex-direction column
      gap 20px

      ul
        display flex
        flex-direction column
        gap 12px

        li
          display flex

          a
            flex-grow: 1
            display: flex
            align-items: center
            gap: 10px
            color var(--lightGrayColor)
            cursor pointer
            padding .5rem 0 .5rem 3rem
            border-left transparent 4px solid
            transition border-left .3s ease-in-out

            .icon
              width: 18px
              height: 18px

          &:hover, &.active
            a
              color var(--primaryColor)
              border-left var(--primaryColor) 4px solid

      button
        margin-left: 40px

    footer
      display flex
      align-items center
      justify-content center
      gap 10px


  section
    display flex
    justify-content center
    align-items center
    flex-direction column
    background var(--lightBlueColor)
    border-left  1px solid var(--lighterColor)
    gap 5px
    flex-grow 1
    transition .3s ease-in-out
    transition-property background, border-left

    h1
      font-weight 700

    p
      font-size 1.4rem